class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        int longest=1;
        if(nums.size()==0) return 0;
        unordered_set<int> st(nums.begin(),nums.end());
        for(auto it:st){
            if(st.find(it-1) == st.end()){
                int count=1;
                int x=it;
                while(st.find(++x) != st.end()){
                    count++;
                }
                longest=max(longest,count);
            }
        }
        return longest;
    }
};
